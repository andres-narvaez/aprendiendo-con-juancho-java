<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>

<VBox alignment="CENTER" prefHeight="768.0" prefWidth="1366.0" spacing="20.0" styleClass="main-container" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.acj.aprendiendoconjuancho.AcjMainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <ImageView cache="true" fitHeight="226.0" fitWidth="379.0" pickOnBounds="true" preserveRatio="true" styleClass="logo">
      <image>
         <Image url="@../../../images/logo-main.png" />
      </image>
   </ImageView>
   <TextField alignment="CENTER" focusTraversable="false" promptText="Ingresa tu nombre" styleClass="name-input" />
    <Button onAction="#onHelloButtonClick" style="-fx-border-radius: 50px;" styleClass="base-button" text="EMPEZAR" textAlignment="CENTER">
      <effect>
         <DropShadow height="23.0" offsetX="4.0" offsetY="3.0" radius="11.25" spread="0.2" width="24.0">
            <color>
               <Color opacity="0.5287356376647949" />
            </color>
         </DropShadow>
      </effect>
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor></Button>
   <stylesheets>
      <URL value="@../../../styles/welcome.css" />
      <URL value="@../../../styles/common.css" />
   </stylesheets>
</VBox>
